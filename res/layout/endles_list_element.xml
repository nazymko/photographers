<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content" android:paddingTop="15dp">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" android:layout_gravity="center">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Made by:"
                android:id="@+id/made_by" android:layout_gravity="center"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/author_name"
                  android:text="Author Name"
                  android:textColor="#ffffff"
                  android:layout_gravity="center"
                  android:layout_alignTop="@+id/made_by"
                  android:layout_toRightOf="@id/made_by"/>
    </RelativeLayout>

    <ImageView
            android:src="@drawable/example_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="160dp"
            android:id="@+id/imageView"
            android:contentDescription="image"
            android:layout_gravity="center"/>
    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="-30dp"
                    android:background="#59CDFF19" android:gravity="center_vertical">


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/rate_word"
                  android:textColor="@android:color/holo_green_dark"
                  android:id="@+id/img_rate"
                  android:paddingRight="15dp"
                  android:layout_gravity="center"
                  android:layout_alignParentRight="true"
                  android:layout_alignTop="@+id/author_name"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/picture_name"
                  android:text="name"
                  android:textColor="#ffffff"
                  android:layout_gravity="center" android:layout_toRightOf="@+id/separator"
                  android:layout_alignTop="@+id/separator" android:paddingLeft="15dp"/>

    </RelativeLayout>
</LinearLayout>